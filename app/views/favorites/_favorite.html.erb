<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <span>
      <%= link_to post_favorites_path(post.id), method: :delete, remote: true, class: "text-danger" do %>
        ❤<%= post.favorites.count %> いいね
      <% end %>
    </span>
  <% else %>
    <span>
      <%= link_to post_favorites_path(post.id), method: :post, remote: true, class: "text-dark" do %>
        ♡<%= post.favorites.count %> いいね
      <% end %>
    </span>
  <% end %>
<% end %>
