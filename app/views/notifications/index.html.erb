<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <%= render 'users/info', user: @user %>
    </div>
    <div class="col-9 offset-md-1">
      <h1><i class="fas fa-paw"></i>通知一覧</h1>
        <%= link_to notifications_destroy_all_path(current_user.id), method: :delete do %>
          <i class="fas fa-trash" style="color: black;"></i>
          <h7 style="color: black;">全削除</h7>
        <% end %>
        <hr>
      <% if @notifications.exists? %>
        <div class="users-index">
          <%= render @notifications %>
        </div>
      <% else %>
        <p>通知はありません</p>
      <% end %>
    </div>
  </div>
</div>