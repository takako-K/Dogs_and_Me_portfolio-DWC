<div class="container mt-5">
  <div class="row">
    <div class="user-info col-2">
      <%= render 'users/info', user: @user %>
    </div>
    <div class="col-9 offset-1">
      <h1><i class="fas fa-paw"></i>ユーザー一覧</h1>
      <div class="card-list-container p-3">
        <% @users.each do |user| %>
        <div class="row shadow-lg">
          <div class="col-2 my-auto">
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "mt-1 rounded-circle"; %>
          </div>
          <div class="col-2 my-auto">
            <h5><i class="fas fa-user"></i><%= user.name %></h5>
          </div>
          <div class="col-5 my-auto">
            <%= user.introduction %>
          </div>
          <div class="col-3 my-auto">
            <%= link_to "投稿を見る", user_path(user.id), class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @users %>
  </div>
</div>