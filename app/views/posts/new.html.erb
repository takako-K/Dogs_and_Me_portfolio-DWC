<div class="container mt-5">
  <h1 class="row m-3"><i class="fas fa-paw"></i>新規投稿</h1>
  <div class="row">
    <div class="col-7 m-3">
    <!--バリデーションによるエラーメッセージ-->
    <% if @post.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <%= @post.errors.count %>件のエラーが発生しました<br>
        <% @post.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </div>
    <% end %>
    <!--ここまで-->
    <%= form_with model: @post, local: true do |f| %>
      <div class="form-group">
        <label for="inputPostImage">投稿画像</label>
        <p><%= f.attachment_field :post_image, placeholder: "投稿画像" %></p>
      </div>
      <div class="form-group">
        <label for="inputTitle">タイトル</label>
        <p><%= f.text_field :title, autofocus: true, placeholder: "タイトル" %></p>
      </div>
      <div class="form-group">
        <label for="inputBody">本文</label>
        <p><%= f.text_area :body, rows:'6', cols:'80' %></p>
      </div>
      <div class="form-group">
        <p><%= f.submit "新規投稿", class: "btn btn-success" %></p>
        <p><%= link_to "投稿一覧へ", posts_path %></p>
      </div>
    <% end %>
    </div>
    <div class="col-2">
      <%= image_tag '1187328.jpg', size: '500x500' %>
    </div>
  </div>
</div>
